<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_mypartnershipdetail_container"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/grey8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/item_mypartnershipdetail_tv_productname"
            android:layout_gravity="center_horizontal"
            android:text="Product name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_mypartnershipdetail_img_product"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="190dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/item_mypartnershipdetail_tv_status"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/item_mypartnershipdetail_btn_viewdetails"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="View Details"
            android:background="@drawable/button1_3"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>