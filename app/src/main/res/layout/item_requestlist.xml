<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_requestlist_container"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/item_requestlist_image"
                android:scaleType="fitXY"
                android:src="@drawable/dressbg2"
                android:layout_width="230dp"
                android:layout_height="280dp" />
            <!--<View-->
                <!--android:alpha="0.4"-->
                <!--android:background="@color/black"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="250dp"/>-->
            <!--<TextView-->
                <!--android:textColor="@color/gray"-->
                <!--android:textSize="40sp"-->
                <!--android:rotation="325"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="Example" />-->
        </RelativeLayout>
        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:id="@+id/item_requestlist_tv_itemname"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Item Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:text="by "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_requestlist_tv_username"
                android:textSize="10sp"
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:text="Description"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_requestlist_tv_description"
                android:layout_gravity="center"
                android:text="2018-06-16"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:text="Quantity"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_requestlist_tv_qty"
                android:layout_gravity="center"
                android:text="2018-06-16"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:text="Date Expired"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textColor="@color/red"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_requestlist_tv_dateexpired"
                android:layout_gravity="center"
                android:text="2018-06-16"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:text="Budget per Unit"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_requestlist_tv_budget"
                android:layout_gravity="center"
                android:text="2018-06-16"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/item_requestlist_btn_offer"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Offer"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>