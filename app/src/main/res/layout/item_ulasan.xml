<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemulasan_namaproduk"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Produk" />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/itemulasan_gambarproduk"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/fake"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/itemulasan_imgRating"
                    android:layout_marginTop="-7dp"
                    android:layout_marginLeft="-10dp"
                    android:scaleType="fitXY"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/star5"/>
                <LinearLayout
                    android:layout_marginTop="-5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/itemulasan_imgGambarUser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user"/>
                    <TextView
                        android:id="@+id/itemulasan_tvNamaUser"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:text="Nama User"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/itemulasan_tvJangkaBalasan"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:text="5 months ago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/itemulasan_tvReview"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:text="Mantap coeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>