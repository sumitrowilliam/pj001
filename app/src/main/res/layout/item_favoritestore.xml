<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/itemfavoritestore_imgStore"
            android:src="@drawable/image"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/itemfavoritestore_tvname"
                android:textColor="@color/black"
                android:text="Store Name"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/itemfavoritestore_imgstar1"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
                <ImageView
                    android:id="@+id/itemfavoritestore_imgstar2"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
                <ImageView
                    android:id="@+id/itemfavoritestore_imgstar3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
                <ImageView
                    android:id="@+id/itemfavoritestore_imgstar4"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
                <ImageView
                    android:id="@+id/itemfavoritestore_imgstar5"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/itemfavoritestore_imgdelete"
            android:layout_gravity="center_vertical"
            android:src="@drawable/delete"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>