<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editprofile_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/editprofile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/editprofile_emailaddress"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Email Address"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/black"
                android:id="@+id/editprofile_layoutfullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user1"
                    android:drawableLeft="@drawable/user1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColorHint="@color/black"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/editprofile_etfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:layout_marginTop="5dp"
                android:id="@+id/editprofile_radiogroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/editprofile_rbmale"
                    android:textSize="14sp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:text="Male"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/editprofile_rbfemale"
                    android:textSize="14sp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:text="Female"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/black"
                android:id="@+id/editprofile_layoutphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/phone"
                    android:drawableLeft="@drawable/phone"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:textColorHint="@color/black"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/editprofile_etphonenumber"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:maxLength="16"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button1_3"
                android:textColor="@color/white"
                android:id="@+id/editprofile_btn_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Save changes"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
