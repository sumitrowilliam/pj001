<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/dialog_filter_toolbar"
    android:layout_width="360dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="Minimal Order :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <me.himanshusoni.quantityview.QuantityView
                android:layout_marginLeft="10dp"
                android:id="@+id/dialog_filter_qv_minorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:qv_quantity="1"
                app:qv_minQuantity="1"
                app:qv_maxQuantity="50"
                app:qv_addButtonBackground="@color/green"
                app:qv_addButtonText=" + "
                app:qv_addButtonTextColor="@color/white"
                app:qv_removeButtonBackground="@color/red"
                app:qv_removeButtonText=" - "
                app:qv_removeButtonTextColor="@color/white"
                app:qv_quantityPadding="30dp"
                app:qv_quantityDialog="true"/>
        </LinearLayout>
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:text="Price Range : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/dialog_filter_tvminpricerange"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="10000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=" - "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/dialog_filter_tvmaxpricerange"
                    android:layout_gravity="center_vertical"
                    android:text="100000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/dialog_filter_rangeseekbar_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:corner_radius="10"
                app:min_value="10000"
                app:max_value="100000000"
                app:steps="10000"
                app:bar_color="@color/cyan4"
                app:bar_highlight_color="@color/cyan"
                app:left_thumb_color="@color/cyan1"
                app:left_thumb_color_pressed="@color/cyan6"
                app:right_thumb_color="@color/blue"
                app:right_thumb_color_pressed="@color/blue6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dialog_filter_tvminpricerangevalue"
                    android:text="min value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:id="@+id/dialog_filter_tvmaxpricerangevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="max value" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray1"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/dialog_filter_spinner_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/dialog_filter_spinner_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/dialog_filter_spinner_shipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="Rating : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/dialog_filter_tv_minrate"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/dialog_filter_tv_maxrate"
                android:layout_gravity="center_vertical"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/dialog_filter_rangeseekbar_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="5"
            app:bar_color="@color/cyan4"
            app:bar_highlight_color="@color/cyan"
            app:left_thumb_color="@color/cyan1"
            app:left_thumb_color_pressed="@color/cyan6"
            app:right_thumb_color="@color/blue"
            app:right_thumb_color_pressed="@color/blue6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:id="@+id/dialog_filter_tv_ratingmin"
                android:text="min value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:id="@+id/dialog_filter_tv_ratingmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="max value" />
        </RelativeLayout>
        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/dialog_filter_btnSet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:text="Set" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
