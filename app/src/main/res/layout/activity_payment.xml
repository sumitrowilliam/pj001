<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/payment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/payment_tv_totalprice"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Total Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/payment_tv_subtotalprice"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="Subtotal Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/payment_tv_shippingprice"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="Shipping Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/payment_tv_usepoint"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="Use Point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/money"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/payment_tv_point"
            android:textColor="@color/green2"
            android:text="IDR 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:inputType="number"
        android:id="@+id/payment_et_point"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Input your point here"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/payment_btn_submit"
        android:background="@drawable/button1_green"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
