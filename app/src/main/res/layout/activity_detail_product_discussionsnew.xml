<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/detailproductdiscussionnew_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <EditText
        android:background="@color/gray"
        android:id="@+id/detailproductdiscussionnew_etcomment"
        android:gravity="top"
        android:layout_margin="10dp"
        android:layout_above="@id/detailproductdiscussionnew_btnAdd"
        android:hint="Write down your thoughts here"
        android:layout_below="@id/detailproductdiscussionnew_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:textColor="@color/white"
        android:background="@color/green1"
        android:text="send"
        android:layout_alignParentBottom="true"
        android:id="@+id/detailproductdiscussionnew_btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
