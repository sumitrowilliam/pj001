<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_approvepartnership_container"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/grey8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:id="@+id/item_approvepartnership_tv_storename"
            android:layout_gravity="center_horizontal"
            android:text="Product name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:id="@+id/item_approvepartnership_tv_productname"
            android:layout_gravity="center_horizontal"
            android:text="Product name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/item_approvepartnership_btn_viewdetails"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/button1_3"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_approvepartnership_img_product"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="190dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/item_approvepartnership_btn_accept"
                android:layout_marginRight="10dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/item_approvepartnership_btn_reject"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button1_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>