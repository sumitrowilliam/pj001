<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/itemtransactionhistory_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/grey8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="12sp"
                android:id="@+id/itemtransactionhistory_tv_date"
                android:text="2018-06-24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="5dp"
                android:background="@color/grey3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/itemtransactionhistory_tv_ordernumber"
                android:text="order number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/itemtransactionhistory_tv_price"
            android:textColor="@color/black"
            android:text="IDR 50.000.000.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>