<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/itempayment_container"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itempayment_tvordernumber"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="order number"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/itempayment_tvstorename"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Store Name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/itempayment_tvoderdate"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:text="Order date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itempayment_tvtotal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="IDR xxxx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:text="No payment confirmation yet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/itempayment_btnconfirm"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Confirm Payment"
                android:background="@drawable/button1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/itempayment_btncancel"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Cancel Order"
                android:background="@drawable/button1_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>